<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.RecipeDetailFragment">


    <TextView
        android:id="@+id/tvLabelDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/ibAddToSched"
        android:autoSizeMaxTextSize="50sp"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:text="Chicken Picata"
        android:fontFamily="@font/arvo"
        android:background="@drawable/shape"
        android:backgroundTint="@color/light_green"/>

    <TextView
        android:id="@+id/tvUrlDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvLabelDetail"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:autoLink="all"
        tools:text="URL" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/ibAddToSched"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="5dp"
        app:backgroundTint="@color/light_green"
        app:fabSize="mini"
        app:srcCompat="@android:drawable/ic_menu_add" />

    <ListView
        android:id="@+id/lvIngredientList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvUrlDetail" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/ibShareRecipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="350dp"
        app:backgroundTint="@color/light_green"
        app:fabSize="mini"
        app:srcCompat="@drawable/share_icon" />




</RelativeLayout>